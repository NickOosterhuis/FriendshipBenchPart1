<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.UserEditPage"
             Title="Edit">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="16">
                <Label Text="Email:" FontAttributes="Bold"/>
                <Label x:Name="emailField" Text="{Binding Email}"/>
                <Label Text="Street name:" FontAttributes="Bold"/>
                <Entry x:Name="streetnameField" Text="{Binding StreetName}" />
                <Label Text="House number:" FontAttributes="Bold"/>
                <Entry x:Name="houseNumberField" Text="{Binding HouseNumber}" />
                <Label Text="Province:" FontAttributes="Bold"/>
                <Entry x:Name="provinceField" Text="{Binding Province}" />
                <Label Text="District:" FontAttributes="Bold"/>
                <Entry x:Name="districtField" Text="{Binding District}" />
                <StackLayout x:Name="ButtonSpace" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>