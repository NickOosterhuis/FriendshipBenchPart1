<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.AppointmentDetailPage"
             Title="Appointment details">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="When:" FontAttributes="Bold" />
                <Label Text="{Binding DateTime}" />
                <Label Text="Where:" FontAttributes="Bold" />
                <Label Text="{Binding Bench.Location}" />
                <Label Text="Who:" FontAttributes="Bold"/>
                <Label Text="{Binding HealthworkerName, StringFormat='You and {0}'}" />
                <Label Text="Status:" FontAttributes="Bold"/>
                <Label Text="{Binding AcceptStatus}" />
                <Button x:Name="ToggleStatusButton"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>