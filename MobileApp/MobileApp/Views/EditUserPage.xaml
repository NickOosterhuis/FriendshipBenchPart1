<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.EditUserPage"
             Title="User details">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="Email:" FontAttributes="Bold" />
                <Label Text="{Binding ClientUser.Email}" />
                <Label Text="Password:" FontAttributes="Bold" />
                <Label Text="{Binding ClientUser.Password}" />
                <Label Text="FirstName:" FontAttributes="Bold"/>
                <Label Text="{Binding ClientUser.FirstName}" />
                <Label Text="LastName:" FontAttributes="Bold"/>
                <Label Text="{Binding ClientUser.LastName}" />
                <StackLayout x:Name="ButtonSpace" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>