<h2>Benches</h2>

<div ng-app="healthworker" ng-controller="healthworkercontroller">
    <div>Requested info for bench: {{healthworker.id}}</div>  
        <style>
            table, th, td {
                border: 1px solid black;
            }
        </style>
        <form name="myForm">
            <table id="example" class="table">
                <thead>
                    <th>ID</th>
                    <th>firstname</th>
                    <th>lastname</th>
                    <th>emailadres</th>
                    <th>gender</th>
                    <th>birthday</th>
                    <th>username</th>
                    <th>phonenumber</th>
                </thead>
                <tbody>
                    <tr ng-model="healthworker">
                        <td><input ng-model="healthworker.id" name="id" value={{healthworker.id}} /></td>
                        <td><input ng-model="healthworker.firstName" name="streetname" value={{healthworker.firstName}} /></td>
                        <td><input ng-model="healthworker.lastName" name="housenumber" value={{healthworker.lastName}} /></td>
                        <td><input ng-model="healthworker.email" name="province" value={{healthworker.email}} /></td>
                        <td><input ng-model="healthworker.gender" name="district" value={{healthworker.gender}} /></td>
                        <td><input ng-model="healthworker.birthDay" name="province" value={{healthworker.birthDay}} /></td>
                        <td><input ng-model="healthworker.userName" name="district" value={{healthworker.userName}} /></td>
                        <td><input ng-model="healthworker.phoneNumber" name="district" value={{healthworker.phoneNumber}} /></td>
                        <td><input type="button" class="btn btn-danger" value="delete" ng-click="deleteHealthworker()"></td>
                        <td><input type="button" class="btn btn-success" value="save" ng-click="savehealthworker('put')"></td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>

